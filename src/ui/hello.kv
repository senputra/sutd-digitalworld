ScreenManager:
    MainWindow:
    WasherWindow:
    DryerWindow:

<Dryer_Button@Button>
    background_normal: ''
    background_color: 0, .7, .2, .85
<Washer_Button@Button>
    background_normal: ''
    background_color: 0, .7, .3, .5    

<MainWindow>:

    name: "main"
    GridLayout:
        cols:2                
        Button:
            text: "Washer"
            on_release:
                app.root.current= "Washer" 
                root.manager.transition.direction="right"
        Button:
            text: "Dryer"
            on_release:
                app.root.current= "Dryer" 
                root.manager.transition.direction="left"
